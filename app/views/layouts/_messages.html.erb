<div class="row">
  <div class="twelve columns">
    <div id="alert">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert-box <%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>