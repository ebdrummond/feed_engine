<div class="row">
  <div class="three columns" class='20-margin'>
    <%= image_tag(@user.avatar, :size => "100x100", :alt => "profile") %>
  </div>
  <div class="six columns" class='20-margin'>
    <h1><%= @user.username %></h1>
  </div>
  <div class="three columns" class='50-margin'>
    <%= link_to "Add a Trip", new_trip_path, :class => 'radius button large', id: 'add_trip_button' %>
  </div>
</div>

<br>

<div class="row" id="feed_item">
  <div class="twelve columns">
    <h2>Current Trips</h2>

    <% @current_trips.each do |trip| %>
      <div class="row">
        <div class="twelve">
          <h4><%= link_to trip.name, trip_path(trip) %> <%= pretty_date_range(trip) %></h4>
        </div>
      </div>

      <div class="twelve columns">
        <h6><%= pluralize(trip.travelers.count, "traveler") %> | <%= pluralize(trip.kreeprs.count, "kreepr") %></h6>
      </div>
    <% end %>
  </div>
</div>

<br>

