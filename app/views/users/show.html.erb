<div class="row">
  <div class="three columns" class='20-margin' align="right" id="user-show-icon">
    <%= image_tag(@user.avatar, :size => "60x60", :alt => "profile") %>
    <h1 id="trip-headline"><%= @user.username %></h1>
  </div>

<br>

  <div class="nine columns">
    <div id="feed_item">
      <h2>Current Trips</h2>

      <% @trips.current.each do |trip| %>
        <div class="row">
          <div class="nine columns">
            <h4><%= link_to trip.name, trip_path(trip) %> <%= pretty_date_range(trip) %></h4>
          </div>
        </div>

        <div class="nine columns">
          <h6><%= pluralize(trip.travelers.count, "traveler") %> | <%= pluralize(trip.kreeprs.count, "kreepr") %></h6>
        </div>
        <br><br>
      <% end %>
    </div>

<br>

  <div id="feed_item">
    <h2>Upcoming Trips</h2>

    <% @trips.upcoming.each do |trip| %>
      <div class="row">
        <div class="nine columns">
          <h4><%= link_to trip.name, trip_path(trip) %> <%= pretty_date_range(trip) %></h4>
        </div>
      </div>
    <% end %>
  </div>

<br>

  <div id="feed_item">
    <h2>Past Trips</h2>

    <% @trips.past.each do |trip| %>
      <div class="row">
        <div class="nine columns">
          <h4><%= link_to trip.name, trip_path(trip) %> <%= pretty_date_range(trip) %></h4>
        </div>
      </div>

      <div class="nine columns">
        <h6><%= pluralize(trip.travelers.count, "traveler") %> | <%= pluralize(trip.kreeprs.count, "kreepr") %></h6>
      </div>
      <br><br>
    <% end %>
  </div>
</div>