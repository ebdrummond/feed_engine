<div class="row">
  <div class="twelve columns">
    <h3 id="page_headline">manage trip</h3>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <h2><%= @trip.name %></h2>
  </div>
</div>
<div class="row">
  <div class="one column">
  </div>
  <div class="eleven columns">
    <h4><%= "#{@trip.start} - #{@trip.end}" %></h4>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <h4>Destination</h4>
  </div>
</div>
<div class="row">
  <div class="one column">
  </div>
  <div class="eleven columns">
    <h5><%= @trip.destination %></h5>
  </div>
</div>
<br>
<br>

<div class="row">
  <div class="twelve columns">
    <h4>Privacy Settings</h4>
    <div class="two columns">
      <%= @trip.visibility_setting %>
    </div>
    <div class="eight columns">
    </div>
  </div>
</div>
<br>
<br>

<div class="row">
  <div class="six columns">
    <h4>Travelers</h4>
    <div class="row">
      <% @trip.travelers.each do |traveler| %>
      <div class="four columns">
        <h5 align="right"><%= link_to traveler.username, root_path %></h5>
      </div>
      <div class="eight columns">
        <%= button_to "remove", {:controller => 'user_trips', :action => 'destroy', :trip_id => @trip.id, :trip_role => "traveler"}, method: :delete, :class =>"radius button small" %>
      </div>
      <% end %>
    </div>
    <div class="row">
      <div class="two columns">
      </div>
      <div class="ten columns">
        <h5>Add Travelers<h5>
        <%= form_tag(:controller => "user_trips", :action => "create_traveler", method: :post) do %>
          <%= text_field_tag("username") %>
          <%= hidden_field_tag("trip_id", @trip.id) %>
          <div class="row" align="right">
          <%= submit_tag("Add Traveler", :class => "radius button small") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @trip.visible %>
  <div class="six columns">
    <h4>Kreeprs</h4>
    <div class="row">
      <% @trip.kreeprs.each do |kreepr| %>
      <div class="four columns">
        <h5 align="right"><%= link_to kreepr.username, root_path %></h5>
      </div>
      <div class="eight columns">
        <%= button_to "remove", {:controller => 'user_trips', :action => 'destroy', :trip_id => @trip.id, :trip_role => "kreepr"}, method: :delete, :class =>"radius button small" %>
      </div>
      <% end %>
    </div>
      <div class="two columns">
      </div>
      <div class="ten columns">
        <h5>Add Kreeprs<h5>
        <input type="text" name="end_date">
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>
<br>
<br>

<div class="row">
  <div class="twelve columns">
    <a class="alert radius button" href="#">Delete trip</a>
  </div>
</div>
