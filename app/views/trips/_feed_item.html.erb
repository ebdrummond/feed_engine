<% feeds.each do |feed| %>
<div class="row" id="feed_item">
  <div class="two columns">
    <%= image_tag(feed.user.avatar) %>
    <%= image_tag('http://placehold.it/100x100/ffccaa/000000&text=[image]', :class => 'align-right') %>
  </div>
  <div class="ten columns">
    <div id="feed_item_2">"<%= feed.text %>"</div>
    <div id="feed_item_2">
    <%= link_to feed.user.username, root_path %> posted to trip <a href="#">Bangkok</a> <%= time_ago_in_words(feed.tweeted_at) %> ago
    <%= image_tag('http://placehold.it/500x500/ffccaa/000000&text=[image]') %>
    </div>
  </div>
</div>
<% end %>

