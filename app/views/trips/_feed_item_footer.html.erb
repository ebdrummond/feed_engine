<div class="row">
  <div class="feed_item_footer">

  <%= render partial: 'shared/auth_source_image',
             locals: { :type => feed_item.class.to_s.underscore, :size => "40x40" } %>

  <span style="vertical-align: center"><%= link_to feed_item.user.username,
              user_path(feed_item.user) %>
              posted <%= time_ago_in_words(feed_item.event_created_at) %> ago</span>

  </div>
</div>